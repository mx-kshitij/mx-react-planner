<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.reactplanner.ReactPlanner" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>React Planner</name>
    <description>Planner widget for React apps</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="Events">
                <property key="eventData" type="datasource" isList="true" required="true">
                    <caption>Events source</caption>
                    <description />
                </property>
                <property key="eventIdAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event id</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>
                <property key="eventStartAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event start</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>
                <property key="eventEndAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event end</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>
                <property key="eventResourceAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Resource id</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>
                <property key="eventTitleAttr" type="attribute" dataSource="eventData" required="true">
                    <caption>Event title</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
                <property key="eventColorAttr" type="attribute" dataSource="eventData" required="false">
                    <caption>Color</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
                <property key="eventSelection" type="selection" dataSource="eventData">
                    <caption>Event selection</caption>
                    <description />
                    <selectionTypes>
                        <selectionType name="Single" />
                    </selectionTypes>
                </property>
                <property key="onEventSelection" type="action">
                    <caption>On event click</caption>
                    <description>Action to be performed when an event is clicked</description>
                </property>
                <property key="popoverContent" type="widgets" required="false" dataSource="eventData">
                    <caption>Pop over template</caption>
                    <description></description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Resources">
                <property key="resourceData" type="datasource" isList="true" required="true">
                    <caption>Resources source</caption>
                    <description />
                </property>
                <property key="resourceIdAttr" type="attribute" dataSource="resourceData" required="true">
                    <caption>Resource id</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>
                <property key="resourceNameAttr" type="attribute" dataSource="resourceData" required="true">
                    <caption>Resource name</caption>
                    <description></description>
                    <attributeTypes>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="New Event">
            <property key="newEventResourceId" type="attribute" required="true">
                <caption>Resource id</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
            <property key="newEventStart" type="attribute" required="true">
                <caption>Event Start</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>
            <property key="newEventEnd" type="attribute" required="true">
                <caption>Event End</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>
            <property key="newEventAction" type="action">
                <caption>New event</caption>
                <description>Action to be performed when a new event created</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Configuration">
            <property key="showWeekends" type="boolean" defaultValue="false">
                <caption>Show weekends</caption>
                <description>Show weekends in the planner</description>
            </property>
            <property key="viewStart" type="attribute" required="false">
                <caption>View Start</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>
            <property key="viewEnd" type="attribute" required="false">
                <caption>View End</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Views">
            <property key="showDay" type="boolean" defaultValue="true">
                <caption>Show Day</caption>
                <description></description>
            </property>
            <property key="showWeek" type="boolean" defaultValue="true">
                <caption>Show Week</caption>
                <description></description>
            </property>
            <property key="showMonth" type="boolean" defaultValue="true">
                <caption>Show Month</caption>
                <description></description>
            </property>
            <property key="showQuarter" type="boolean" defaultValue="true">
                <caption>Show Quarter</caption>
                <description></description>
            </property>
            <property key="showYear" type="boolean" defaultValue="true">
                <caption>Show Year</caption>
                <description></description>
            </property>
            <property key="defaultView" type="enumeration" defaultValue="Week">
                <caption>Default view</caption>
                <description></description>
                <enumerationValues>
                    <enumerationValue key="Day">Day</enumerationValue>
                    <enumerationValue key="Week">Week</enumerationValue>
                    <enumerationValue key="Month">Month</enumerationValue>
                    <enumerationValue key="Quarter">Quarter</enumerationValue>
                    <enumerationValue key="Year">Year</enumerationValue>
                </enumerationValues>
            </property>
        </propertyGroup>
    </properties>
</widget>